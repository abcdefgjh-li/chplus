// 字符串索引访问测试

定义(空类型) 主函数() {
    控制台输出("=== 字符串索引访问测试 ===");
    
    // 定义字符串变量
    定义(字符串) str = "Hello";
    控制台输出("原始字符串: " + str);
    
    // 访问字符串的各个字符
    控制台输出("字符0: " + str[0]);
    控制台输出("字符1: " + str[1]);
    控制台输出("字符2: " + str[2]);
    控制台输出("字符3: " + str[3]);
    控制台输出("字符4: " + str[4]);
    
    // 测试中文字符串
    定义(字符串) chineseStr = "你好世界";
    控制台输出("\n中文字符串: " + chineseStr);
    控制台输出("中文字符0: " + chineseStr[0]);
    控制台输出("中文字符1: " + chineseStr[1]);
    控制台输出("中文字符2: " + chineseStr[2]);
    
    // 测试索引变量
    定义(整型) index = 2;
    控制台输出("\n使用变量作为索引: " + str[index]);
    
    控制台输出("\n=== 测试完成 ===");
}