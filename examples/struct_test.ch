// .ch 解释器结构体功能测试

// 定义结构体（必须在主函数外部）
定义(结构体) Person {
    整型 age;
    字符串 name;
    小数 score;
    布尔型 isStudent;
};

定义(结构体) Point {
    整型 x;
    整型 y;
    字符串 color;
};

定义(空类型) 主函数() {
    控制台输出("=== .ch 解释器结构体功能测试 ===");
    
    // ========== 测试1: 结构体定义 ==========
    控制台输出("\n--- 测试1: 结构体定义 ---");
    控制台输出("结构体定义完成");
    
    // ========== 测试2: 结构体变量创建 ==========
    控制台输出("\n--- 测试2: 结构体变量创建 ---");
    
    // 创建结构体变量
    定义(Person) person1;
    定义(Point) point1;
    
    控制台输出("结构体变量创建完成");
    
    // ========== 测试3: 结构体成员赋值 ==========
    控制台输出("\n--- 测试3: 结构体成员赋值 ---");
    
    // 直接对结构体成员赋值
    person1.age = 25;
    person1.name = "张三";
    person1.score = 85.5;
    person1.isStudent = 真;
    
    point1.x = 100;
    point1.y = 200;
    point1.color = "红色";
    
    控制台输出("结构体成员赋值完成");
    
    // ========== 测试4: 结构体成员访问 ==========
    控制台输出("\n--- 测试4: 结构体成员访问 ---");
    
    // 输出结构体成员
    控制台输出("Person信息:");
    控制台输出("姓名: " + person1.name);
    控制台输出("年龄: " + person1.age);
    控制台输出("分数: " + person1.score);
    控制台输出("是否学生: " + person1.isStudent);
    
    控制台输出("Point信息:");
    控制台输出("X坐标: " + point1.x);
    控制台输出("Y坐标: " + point1.y);
    控制台输出("颜色: " + point1.color);
    
    // ========== 测试5: 结构体变量赋值 ==========
    控制台输出("\n--- 测试5: 结构体变量赋值 ---");
    
    // 结构体变量赋值
    定义(Person) person2 = person1;
    控制台输出("从person1赋值给person2:");
    控制台输出("person2姓名: " + person2.name);
    控制台输出("person2年龄: " + person2.age);
    控制台输出("person2分数: " + person2.score);
    控制台输出("person2是否学生: " + person2.isStudent);
    
    // ========== 测试6: 结构体与函数 ==========
    控制台输出("\n--- 测试6: 结构体与函数 ---");
    
    // 定义一个简单的函数来处理结构体
    定义(空类型) printPerson(定义(Person) p) {
        控制台输出("函数中打印Person:");
        控制台输出("姓名: " + p.name);
        控制台输出("年龄: " + p.age);
        控制台输出("分数: " + p.score);
        控制台输出("是否学生: " + p.isStudent);
    }
    
    // 调用函数
    printPerson(person1);
    
    // ========== 测试完成 ==========
    控制台输出("\n=== 结构体功能测试完成 ===");
}