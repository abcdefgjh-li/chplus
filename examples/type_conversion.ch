定义(空类型) 主函数() {
    控制台输出("=== 字符类型和类型转换测试 ===");
    
    // 字符型变量
    定义(字符型) ch1 = 'A';
    定义(字符型) ch2 = '1';
    定义(字符型) ch3 = ' ';
    
    控制台输出("字符型变量:");
    控制台输出("ch1 = '" + ch1 + "'");
    控制台输出("ch2 = '" + ch2 + "'");
    控制台输出("ch3 = '" + ch3 + "'");
    
    // 类型转换测试
    控制台输出("\n类型转换测试:");
    定义(整型) num = 123;
    定义(小数) pi = 3.14159;
    定义(布尔型) flag = 真;
    
    控制台输出("整数: " + num);
    控制台输出("小数: " + pi);
    控制台输出("布尔值: " + flag);
    
    控制台输出("\n字符类型和类型转换功能测试完成！");
}