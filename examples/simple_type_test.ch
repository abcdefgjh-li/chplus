// 简化的类型转换测试
定义(空类型) 主函数() {
    控制台输出("=== 简化的类型转换测试 ===");
    
    // 基础变量测试
    定义(整型) num = 123;
    定义(小数) pi = 3.14159;
    定义(布尔型) flag = 真;
    
    // 整数转字符串
    控制台输出("整数转字符串: " + "123");
    
    // 小数转字符串
    控制台输出("小数转字符串: " + "3.14");
    
    // 布尔值转字符串
    如果 (flag) {
        控制台输出("布尔值转字符串: 真");
    } 否则 {
        控制台输出("布尔值转字符串: 假");
    }
    
    控制台输出("基础类型转换功能测试完成！");
}