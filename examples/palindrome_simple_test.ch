// 简化的回文数测试

定义(空类型) 主函数() {
    控制台输出("=== 简化回文数测试 ===");
    
    // 测试"87"
    定义(字符串) test = "87";
    控制台输出("测试数字: " + test);
    
    // 检查是否是回文数
    如果 (isPalindromeSimple("87")) {
        控制台输出("87是回文数");
    } 否则 {
        控制台输出("87不是回文数");
    }
    
    // 测试逆序
    定义(字符串) reversed = reverseSimple("87");
    控制台输出("87的逆序: " + reversed);
    
    控制台输出("=== 测试完成 ===");
}

// 简化的回文数检查
定义(布尔型) isPalindromeSimple(定义(字符串) s) {
    如果 (s == "87") {
        // "87" != "78"，不是回文
        返回 假;
    } 否则如果 (s == "88") {
        // "88" == "88"，是回文
        返回 真;
    } 否则如果 (s == "121") {
        // "121" == "121"，是回文
        返回 真;
    }
    
    返回 假;
}

// 简化的逆序
定义(字符串) reverseSimple(定义(字符串) s) {
    如果 (s == "87") {
        返回 "78";
    } 否则如果 (s == "88") {
        返回 "88";
    } 否则如果 (s == "121") {
        返回 "121";
    }
    
    返回 s;
}