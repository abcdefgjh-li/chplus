// 回文数问题基本测试

定义(空类型) 主函数() {
    控制台输出("=== 基本字符串索引测试 ===");
    
    // 测试基本字符串操作
    定义(字符串) test = "87";
    控制台输出("测试字符串: " + test);
    
    // 测试字符串长度
    控制台输出("字符串长度应该是2");
    
    // 测试字符串索引访问
    控制台输出("第一个字符: " + test[0]);
    控制台输出("第二个字符: " + test[1]);
    
    // 测试变量作为索引
    定义(整型) idx = 0;
    控制台输出("使用变量访问: " + test[idx]);
    
    控制台输出("=== 测试完成 ===");
}